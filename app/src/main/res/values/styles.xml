<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarPopupTheme">@style/ActionBar.Popup</item>
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="titleTextStyle">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="subtitleTextStyle">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="ActionBar.Popup">
        <item name="background">@color/colorSecondaryDark</item>
        <item name="backgroundTint">@color/colorSecondaryDark</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:imeActionId">6</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorPrimary">@color/colorSecondary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorSecondaryBlur</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
    </style>

    <style name="Text.Pricelist.Name" parent="TextAppearance.MaterialComponents.Subtitle1">
    </style>
    <style name="Text.Pricelist.Price" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
