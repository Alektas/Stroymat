<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <style name="ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="backgroundStacked">?attr/colorSecondary</item>
        <item name="backgroundSplit">?attr/colorSecondary</item>
        <item name="titleTextStyle">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="subtitleTextStyle">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:imeActionId">6</item>
    </style>

    <style name="SearchView.Text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>
